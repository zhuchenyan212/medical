@import "/pages/component/modal.wxss";

page {
  background: #f3f3f3;
}

.container {
  width: 100%;
  margin-bottom: 100px;
}

.stepwrap {
  width: 100%;
  height: 57px;
  background: #fff;
}

.step {
  width: 188px;
  height: 57px;
  text-align: center;
  margin: auto;
}

.step text {
  display: block;
  width: 35px;
  height: 35px;
  line-height: 35px;
  float: left;
  border-radius: 50%;
  margin-left: 12px;
  text-align: center;
  background: #f3f3f3;
  color: #6f6f6f;
  margin-top: 10px;
  font-size: 18px;
}

.active {
  background: #489775 !important;
  color: #fff !important;
}

.addsick {
  margin-top: 10px;
  padding-left: 24px;
  padding-right: 24px;
  background: #fff;
  font-size: 16px;
  padding-bottom: 10px;
}

.ft16 {
  font-size: 15px;
}

.choosesickness {
  width: 100%;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 12px;
  border-radius: 20px;
  margin-top: 10px;
  padding-left: 10px;
  border: 1px solid #f3f3f3;
  text-align: right;
}

.algin {
  color: #666;
  padding-right: 10px;
}

.choosesickness image {
  width: 16px;
  height: 16px;
  float: right;
}

.Editwrap {
  margin-top: 10px;
}

.illList {
  padding-left: 24px;
  padding-right: 24px;
  background: #fff;
}

.illwrap {
  padding-bottom: 15px;
}

.illwrap .ft-12 {
  font-size: 12px;
  color: #474747;
  padding-top: 10px;
}

.Editinfo {
  width: 100%;
  height: 80px;
  border-radius: 5px;
  margin-top: 10px;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  padding-left: 10px;
  font-size: 12px;
  background: #f3f3f3;
  overflow: scroll;
}

.thisillness {
  color: #333;
  font-size: 12px;
  font-weight: Medium;
  line-height: 25px;
}

.linespace {
  padding-left: 60px;
}

.duqi {
  padding-left: 8px;
}

.red {
  color: red;
  font-size: 14px;
}

.showTitle {
  font-size: 12px;
  color: #333;
  padding-top: 10px;
  padding-bottom: 10px;
}

.imgwrap {
  width: 100%;
  /* height: 85px; */
  display: flex;
  /* padding-left:10px;
  align-items: center;
  justify-content: center;
  box-sizing: border-box; */
}

.imgwrap .images {
  width: 85px;
  height: 85px;
  padding: 1px;
  border: 1px solid #959595;
  text-align: center;
  line-height: 22px;
  border-radius: 5px;
  margin: 5px 10px;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.imgwrap .images image {
  width: 100%;
  height: 100%;
}

.bottomOperate>view {
  width: 50%;
}

button {
  width: 50%;
  background: #489775 !important;
  color: #fff !important;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 15px;
}

.red {
  color: red;
  font-weight: bold;
}

/* 弹窗 */

.mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.modal {
  width: 100%;
  height: 100%;
  z-index: 1000;
  position: absolute;
  top: 460px;
}

.middleBox {
  width: 65%;
  height: 310rpx;
  margin: 40% auto;
  background: #fff;
}

.txtInfo {
  font-size: 25rpx;
  padding: 8%;
  text-align: center;
}

.primary {
  width: 80%;
  height: 60rpx;
  color: #fff;
  background: #489775;
  line-height: 60rpx;
  font-size: 25rpx;
  border-radius: 5px;
}

.back {
  width: 80%;
  height: 55rpx;
  color: #489775;
  background: #fff;
  border: 1rpx solid #489775;
  line-height: 55rpx;
  font-size: 25rpx;
  margin-top: 35rpx;
  border-radius: 5px;
}