@import "/pages/component/modal.wxss";

page {
  background: #f3f3f3;
}

.container {
  width: 100%;
  height: 100%;
  background: #fff;
}

.ifshow {
  position: relative;
}

.ifshow .nowrap {
  width: 220px;
  position: absolute;
  left: 50%;
  margin-top: 180rpx;
  margin-left: -110px;
  text-align: center;
  font-size: 15px;
  color: #489775;
  font-weight: bold;
}

.container .nowrap image {
  width: 170px;
  height: 150px;
}

.addill {
  margin-top: 250rpx;
  width: 148px;
  height: 43px;
  line-height: 40px;
  border-radius: 18px;
  box-shadow: #ccc 0px 0px 20px 0px;
  margin: 230px auto;
  font-weight: Medium !important;
}

.addill image {
  width: 16px;
  height: 16px;
  padding-top: 12px;
  float: left;
  padding-left: 20px;
}

.patientList .patient {
  padding-left: 30px;
  padding-right: 30px;
  margin-bottom: 5px;
  background: #fff;
  position: relative;
  padding-top: 10px;
  padding-bottom: 10px;
}

.patientList .patient .Edit {
  width: 5%;
  text-align: center;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}

.patientList .patient .Edit image {
  width: 20px;
  height: 20px;
}

.patientList .patient .ft15 {
  font-size: 15px;
}

.patientList .patient .lable {
  padding: 2px 10px;
  background: #489775;
  color: #fff;
  font-size: 10px;
  border-radius: 20px;
  margin-left: 10px;
}

.patientList .patient .patientInfo text {
  font-size: 12px;
  color: #7d7d7d;
  padding-right: 10px;
}

.patientList .patient .patientNum image {
  width: 12px;
  height: 12px;
  padding-right: 10px;
}

.patientList .patient .patientNum text {
  font-size: 12px;
  color: #474747;
}
