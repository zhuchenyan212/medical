.toolips-box {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toolips-box .toolips {
  height: 70rpx;
  line-height: 70rpx;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  border-radius: 4px;
  padding: 0 24rpx;
  font-size: 28rpx;
}
