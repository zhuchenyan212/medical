@import "/pages/component/modal.wxss";
@import "../component/emptyCart.wxss";

page {
  background: #f3f3f3;
}

.wrap {
  width: 100%;
  height: 100%;
  background: #fff;
}

.ifshow {
  position: relative;
}

.ifshow .nowrap {
  width: 225px;
  position: absolute;
  left: 50%;
  margin-top: 180rpx;
  margin-left: -110px;
  text-align: center;
  font-size: 15px;
  color: #489775;
  font-weight: bold;
}

.wrap .nowrap image {
  width: 170px;
  height: 150px;
}

/* 处方列表 */

.wrap {
  background: #f3f3f3;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 86rpx;
  line-height: 86rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background: #fff;
  color: #333;
  font-size: 15px;
  border-bottom: 1px solid #f3f3f3;
}

.swiper-tab-item {
  width: 16.5%;
}

.active {
  color: #489775;
  font-size: 15px;
  font-weight: bold;
  border-bottom: 2px solid #489775;
}

.orderAll {
  height: 28px;
  line-height: 28px;
  color: #777;
  font-size: 10px;
  padding-left: 15px;
  padding-right: 15px;
  background: #fff;
  border-bottom: 1px solid #ebebeb;
}

.orderItem {
  margin-left: 17px;
  margin-right: 17px;
  color: #a4a4a4;
  background: #fff;
  margin-bottom: 15rpx;
}

.orderItem .orderDoctor {
  padding-top: 10rpx;
  font-size: 11px;
  line-height: 48rpx;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 10rpx;
}

.ft12 {
  font-size: 12px;
  color: #333;
}

.ft15 {
  font-size: 15px;
  color: #489775;
}

.margin {
  margin-top: 15px;
}
