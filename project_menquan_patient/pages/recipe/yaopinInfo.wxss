@import "/pages/component/modal.wxss";

page {
  background-color: #f8f8f8;
  padding-bottom: 30rpx;
}

.listContainer {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 12rpx;
  width: 700rpx;
  padding-left: 50rpx;
  padding-top: 20rpx;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 28rpx;
}

.infoContainer {
  width: 582rpx;
  height: 66rpx;
  background-color: #f3f3f3;
  border-radius: 10rpx;
  padding: 22rpx 30rpx 28rpx 28rpx;
  font-size: 24rpx;
  color: #666;
}

.medicineInfo {
  width: 588rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx 30rpx 22rpx;
  background-color: #f3f3f3;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.medicineInfo-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.illnessInfo-info-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.illnessInfo-info-item-name {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.illnessInfo-info-item-tag {
  width: auto;
  height: 32rpx;
  background-color: #489775;
  font-size: 22rpx;
  color: #fff;
  border-radius: 10rpx;
  padding: 2rpx 12rpx;
  margin-left: 16rpx;
}

.illnessInfo-info-item-sum {
  font-size: 24rpx;
  color: #333;
  font-weight: normal;
}

.illnessInfo-info-item-priceUnit {
  font-size: 24rpx;
  color: #999;
}

.illnessInfo-info-item-info {
  font-size: 24rpx;
  color: #333;
  margin-left: 22rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

/* 弹窗 */

.mask {
  background-color: #001015;
  opacity: 0.4;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}

.menu {
  width: 584rpx;
  background-color: #fff;
  border-radius: 46rpx;
  position: absolute;
  left: 50rpx;
  top: 120rpx;
  z-index: 999;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.scrollV {
  width: auto;
  height: 210rpx;
  margin-bottom: 20rpx;
}

.medicalInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.medicalInfo-count {
  font-size: 24rpx;
  color: #999;
}

.medicalInfo-name {
  font-size: 24rpx;
  color: #333;
}

.medicalInfo-sum {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.cancelItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 18rpx;
}

.cancel {
  width: 30rpx;
  height: 30rpx;
}

.cancelText {
  font-size: 26rpx;
  color: #333;
  margin-left: 16rpx;
}

.message {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #489775;
}

.message image {
  width: 50rpx;
  height: 50rpx;
}

.message text {
  font-size: 30rpx;
  color: #fff;
  margin-left: 18rpx;
}

.message:active {
  opacity: 0.5;
}

.illnessInfo-title-name {
  font-size: 16px;
}
