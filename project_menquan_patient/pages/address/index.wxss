@import "/pages/component/modal.wxss";

page {
  background: #fff;
}

.container {
  width: 100%;
  height: 100%;
}

.ifshow {
  position: relative;
}

.ifshow .nowrap {
  width: 220px;
  position: absolute;
  left: 50%;
  margin-top: 180rpx;
  margin-left: -110px;
  text-align: center;
  font-size: 15px;
  color: #489775;
  font-weight: bold;
}

.container .nowrap image {
  width: 170px;
  height: 150px;
}

.container .nowrap .addill {
  margin-top: 250rpx;
  width: 148px;
  height: 43px;
  line-height: 40px;
  border-radius: 18px;
  box-shadow: #ccc 0px 0px 20px 0px;
  margin: 230px auto;
  font-weight: Medium !important;
}

.container .nowrap .addill image {
  width: 16px;
  height: 16px;
  padding-top: 12px;
  float: left;
  padding-left: 20px;
}

.wrap {
  width: 100%;
  height: auto;
}

.addressList {
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
}

.addressitem {
  width: 100%;
  height: 69px;
  margin-bottom: 8px;
  border-radius: 10px;
  font-size: 12px;
  border: 1px solid #489775;
}

.addressitem .left {
  width: 85%;
}

.addressitem .left .lableicon {
  width: 8%;
  height: 69px;
  background: #489775;
  color: #fff;
  border-radius: 10px 0 0 9px;
  text-align: center;
  float: left;
}

.addressitem .left .address {
  float: left;
  height: 34px;
  line-height: 34px;
  width: 92%;
}

.addressitem .left .address text {
  margin-left: 15px;
}

.addressitem .right {
  width: 15%;
}

.addressitem .right > view {
  height: 34px;
  line-height: 34px;
  text-align: center;
}

.specol {
  color: #489775;
}

.deletcol {
  color: #afafaf;
}

.addpatient {
  width: 148px;
  line-height: 40px;
  border-radius: 18px;
  box-shadow: #ccc 0px 0px 20px 0px;
  /* margin:100px auto; */
  font-size: 13px;
  color: #489775;
  background: #fff;
  position: fixed;
  left: 30%;
  bottom: 45px;
}

.addpatient image {
  width: 16px;
  height: 16px;
  padding-top: 12px;
  float: left;
  padding-left: 30px;
  padding-right: 10px;
}
