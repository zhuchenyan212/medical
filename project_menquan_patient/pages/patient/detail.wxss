@import "/pages/component/modal.wxss";

page {
  background: #f3f3f3;
}

.patientList .patient {
  padding-left: 30px;
  padding-right: 30px;
  margin-bottom: 10px;
  background: #fff;
  position: relative;
  padding-top: 10px;
  padding-bottom: 10px;
}

.patientList .patient .ft15 {
  font-size: 15px;
}

.patientList .patient .lable {
  padding: 2px 10px;
  background: #489775;
  color: #fff;
  font-size: 10px;
  border-radius: 20px;
  margin-left: 10px;
}

.patientList .patient .patientInfo text {
  font-size: 12px;
  color: #7d7d7d;
  padding-right: 10px;
}

.patientList .patient .patientNum image {
  width: 12px;
  height: 12px;
  padding-right: 10px;
}

.patientList .patient .patientNum text {
  font-size: 12px;
  color: #474747;
}

.illList {
  padding-left: 24px;
  padding-right: 24px;
  background: #fff;
}

.illwrap {
  padding-bottom: 20px;
}

.illwrap .ft-12 {
  font-size: 12px;
  color: #474747;
  padding-top: 15px;
}

.Editinfo {
  width: 100%;
  height: 98rpx;
  border-radius: 5px;
  margin-top: 10px;
  padding-top: 15rpx;
  padding-bottom: 10rpx;
  text-align: left;
  padding-left: 10px;
  font-size: 12px;
  color: #474747;
  background: #f3f3f3;
  overflow: scroll;
}

.imgwrap {
  width: 100%;
  height: 110px;
  padding-left: 24px;
  padding-right: 24px;
  margin-top: 10px;
  background: #fff;
  padding-top: 25px;
}

.imgwrap .images {
  width: 28%;
  height: 85px;
  border: 1px solid #959595;
  text-align: center;
  line-height: 22px;
  border-radius: 5px;
  float: left;
  margin-right: 8px;
}

.imgwrap .images image {
  width: 100%;
  height: 100%;
}

.imgwrap .images .ft15 {
  font-size: 15px;
  color: #959595;
}
