@import "/pages/component/modal.wxss";

.container {
  background: #f3f3f3;
  height: 100%;
}

.head_t {
  background: #fff;
  text-align: center;
  width: 100%;
  height: 336rpx;
  border-top: 1px solid #f3f3f3;
}

.head_t .get_score {
  padding: 24rpx 0 12rpx 0;
  position: relative;
}

.head_t .get_score .score {
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
}

.head_t .total_score {
  font-size: 32rpx;
  line-height: 50rpx;
}

.head_t .total_score .docName {
  font-size: 17px;
  color: #6d6d6d;
  padding-left: 60px;
}

.head_t .total_score .lable_doc {
  width: 100%;
  height: 32rpx;
  font-size: 10px;
  border-radius: 8px;
  color: #489775;
  padding-left: 5px;
  padding-right: 5px;
  border: 1px solid #489775;
  margin-left: 10px;
}

.head_t .total_score .docAd {
  font-size: 12px;
  color: #a7a7a7;
  padding-right: 30rpx;
}

.doctorInfo {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
}

.doctorInfo .doctorInfoitem {
  line-height: 90rpx;
  font-size: 13px;
  padding-left: 54rpx;
  border-bottom: 1px solid #f3f3f3;
  width: 100%;
  overflow: hidden;
}

.doctorInfo .doctorInfoitem .spaceline {
  padding-left: 50rpx;
}

.speor {
  color: #489775 !important;
}

.doc_type {
  width: 15%;
  height: 45rpx;
  font-size: 10px;
  border-radius: 8px;
  color: #489775;
  border: 1px solid #489775;
  margin-right: 10px;
  line-height: 45rpx;
  text-align: center;
  float: left;
  margin-bottom: 10px;
}
