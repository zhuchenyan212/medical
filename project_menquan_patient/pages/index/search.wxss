@import "/pages/component/modal.wxss";

page {
  background: #f9f9f9;
}

/* 搜索样式 */

.contA {
  height: 120rpx;
  flex-direction: row;
  padding: 12rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  background: #fff;
  border-top: 1px solid #f5f5f5;
}

.searchcontainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #f9fafb;
  border-radius: 38rpx;
  height: 76rpx;
  flex-grow: 1;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
}

.letf_search {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.input_delete {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.search_input {
  font-size: 24rpx;
  color: #333;
  flex-grow: 1;
}

.search_placeholder {
  font-size: 24rpx;
  color: #999;
}

.search_btn {
  line-height: 35px;
  font-size: 28rpx;
  flex-shrink: 0;
  padding: 0rpx;
  text-align: center;
  color: #1a173b;
  font-weight: bold;
  background: none !important;
}

.ft12 {
  font-size: 12px;
  line-height: 39px;
  padding-left: 28px;
  color: #8d8d8d;
}

/* 医生列表 */

.Doctoritem {
  display: flex;
  box-sizing: border-box;
  padding: 20rpx 29px;
  margin-bottom: 10rpx;
  background: #fff;
  height: 200rpx;
  overflow:scroll;
}

.Doctoritem .pro-img image {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
}

.pro-info-box {
  position: relative;
  padding-left: 40rpx;
  line-height: 22px;
  -webkit-box-flex: 1;
  flex: 1;
}

.pro-info-box .ft-16 {
  font-size: 16px;
  color: #333;
  font-weight: Medium;
}

.pro-info-box .lable_Doc {
  width: 100%;
  height: 32rpx;
  font-size: 10px;
  border-radius: 8px;
  color: #489775;
  padding-left: 5px;
  padding-right: 5px;
  border: 1px solid #489775;
  margin-left: 10px;
}

.pro-info-box .ft-12 {
  font-size: 12px;
  color: #989898;
}

.pro-info-box .money {
  color: #373737;
  font-size: 12px;
}

.pro-info-box .service {
  color: #989898;
  font-size: 10px;
}

.lable_hos {
  font-size: 12px;
  color: #489775;
  padding-right: 20px;
}
