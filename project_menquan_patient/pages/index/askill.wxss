@import "/pages/component/modal.wxss";

.container {
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
}

.wrap {
  width: 188rpx;
  height: 258px;
  position: absolute;
  left: 50%;
  margin-top: 250rpx;
  margin-left: -94rpx;
}

.wrap .radiusnew {
  width: 100%;
  height: 94px;
  background: #489775;
  border-radius: 50%;
  text-align: center;
  line-height: 24px;
  box-shadow: #489775 0px 0px 20px 0px;
}

.wrap .radiusnew image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 20px;
}

.wrap .radiusnew .font {
  color: #fff;
  font-size: 15px;
}

.wrap .radiusold {
  width: 100%;
  height: 94px;
  background: #59A83B;
  border-radius: 50%;
  margin-top: 10px;
  text-align: center;
  line-height: 24px;
  box-shadow: #59A83B 0px 0px 20px 0px;
}

.wrap .radiusold image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 20px;
}

.wrap .radiusold .font {
  color: #fff;
  font-size: 15px;
}

/* 弹窗 */

.mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 998;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.modal {
  width: 100%;
  height: 60%;
  z-index: 999;
  position: fixed;
  margin: 0 auto;
}

.middleBox {
  width: 65%;
  height: 310rpx;
  margin: 40% auto;
  background: #fff;
}

.txtInfo {
  font-size: 25rpx;
  padding: 8%;
  text-align: center;
}

.primary {
  width: 80%;
  height: 60rpx;
  color: #fff;
  background: #489775;
  line-height: 60rpx;
  font-size: 25rpx;
  border-radius: 5px;
}

.back {
  width: 80%;
  height: 55rpx;
  color: #489775;
  background: #fff;
  border: 1rpx solid #489775;
  line-height: 55rpx;
  font-size: 25rpx;
  margin-top: 35rpx;
  border-radius: 5px;
}
