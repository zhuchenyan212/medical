/* pages/patientInfo/patientInfo.wxss */
page{
  background-color: #F8F8F8;
}
.topContainer{
  width: 100%;
  height: 272rpx;
  background-color: #489775;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.usrIcon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 62rpx;
}
.topContainer-right{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
}
.topContainer-right-nickName{
  font-size: 32rpx;
  color: #FFFFFF;
}
.topContainer-right-realName{
  font-size: 26rpx;
  color: #FFFFFF;
}
.address-phone{
  display: flex;
  flex-direction: row;
  align-items: center;
  }
  .address-phone image{
    width: 24rpx;
    height: 24rpx;
  }
  .address-phone text{
    font-size: 20rpx;
    color: #FFFFFF;
    margin-left: 16rpx;
  }
  .title{
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
  }
  .title text{
    font-size: 30rpx;
    color: #333333;
    margin-left: 68rpx;
  }
  .patientInfo{
    display: flex;
    flex-direction: column;
  }
  .patientInfo-item{
    width: 100%;
    height: 160rpx;
    background-color: #FFFFFF;
    display: flex;
    flex-direction: column;
    margin-bottom: 10rpx;
    justify-content: space-around;
  }
  .patientInfo-item-infoTIme{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-left: 50rpx;
    padding-right: 30rpx;
  }
  .infoPoint{
    display: flex;
    flex-direction: row;
  }
  .infoTime-Info{
    width: 454rpx;
    font-size: 24rpx;
  color: #333333;
  margin-left: 12rpx;
    text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  }
  .infoTime-Info2{
    width: 454rpx;
    font-size: 24rpx;
  color: #333333;
  margin-left: 12rpx;
    text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
  }
  .point{
    width: 6rpx;
    height: 6rpx;
    background-color: #252525;
    border-radius: 50%;
    margin-top: 12rpx;

  }
  .infoTime-Info-infos{
    font-size: 24rpx;
    color: #777777;


  }
  .patientInfo-item-infoTIme-time{
    font-size: 20rpx;
    color: #494949;
  }
  .medice{
    font-size: 22rpx;
    color: #333333;
  }
  .more{
    font-size: 22rpx;
    color: #B1B1B1;
  }

  .message{
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #489775;
  }
  .message image{
    width: 50rpx;
    height: 50rpx;
  }
  .message text{
    font-size: 30rpx;
    color: #FFFFFF;
    margin-left: 18rpx;
  }
  .message:active{
    opacity: 0.5
  }