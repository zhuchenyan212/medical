/* pages/searchBusinessPeople/searchBusinessPeople.wxss */

page {
  background-color: #fff;
  padding-bottom: 100rpx;
  padding-top: 104rpx;
}

.searchView {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  border-top: 2rpx solid #f5f5f5;
}

.searchView2 {
  width: 650rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.searchView2 input {
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 40rpx;
  font-size: 24rpx;
  color: #333;
}

.placeholder {
  font-size: 24rpx;
  color: #333;
}

.searchView2 image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.maskList {
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: column;
  top: 104rpx;
  left: 0;
  z-index: 999;
}

.maskItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 36rpx 70rpx 36rpx 50rpx;
  margin-bottom: 2rpx;
}

.maskItem:active {
  opacity: 0.8;
}

.maskItem-name {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.maskItem-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.maskItem-right image {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}

.name {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.age {
  font-size: 20rpx;
  color: #777;
}

.margin-right-right {
  display: flex;
  flex-direction: column;
  margin-left: 46rpx;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border: solid #999;
  border-width: 2rpx 2rpx 0 0;
  transform: rotate(45deg);
  margin-left: 24rpx;
}
