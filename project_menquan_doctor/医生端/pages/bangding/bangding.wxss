/* pages/bangding/bangding.wxss */

page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 100%;
}

.inputwrap {
  width: 100%;
  height: 130rpx;
  border-bottom: 2rpx solid rgb(248, 245, 245);
}

.inputwrap > view {
  width: 22%;
  height: 76rpx;
  line-height: 76rpx;
  float: left;
  font-size: 30rpx;
}

.inputwrap > input {
  width: 73%;
  height: 72rpx;
  line-height: 72rpx;
  background: #eee;
  border: 2rpx solid rgba(112, 112, 112, 1);
  border-radius: 8rpx;
  float: right;
  padding-left: 13rpx;
}

.loginBtn {
  width: 578rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #449271;
  border-radius: 40rpx;
  margin-top: 50rpx;
}
