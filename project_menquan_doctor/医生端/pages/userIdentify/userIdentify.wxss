/* pages/userIdentify/userIdentify.wxss */

page {
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.uploadImg {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 650rpx;
  padding-left: 40rpx;
  padding-right: 60rpx;
  height: 190rpx;
  background-color: #fff;
  margin-top: 2rpx;
}

.uploadImg image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.uploadImg text {
  font-size: 25rpx;
  color: #4d4d4d;
  margin-left: 46rpx;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border: solid #999;
  border-width: 2rpx 2rpx 0 0;
  transform: rotate(45deg);
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  width: 650rpx;
  height: 100rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  margin-bottom: 2rpx;
}

.item1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  width: 650rpx;
  min-height: 100rpx;
  margin-bottom: 2rpx;
  padding: 10rpx 40rpx 0rpx 40rpx;
}

.item1-left {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-title {
  font-size: 25rpx;
  color: #6f6f6f;
}

.input {
  /* width: 230rpx; */
  height: 100rpx;
  line-height: 100rpx;
  font-size: 25rpx;
  color: #333;
  margin-left: 88rpx;
}

.placeholder {
  font-size: 25rpx;
  color: #333;
  margin-left: 88rpx;
}

.illList {
  display: flex;
  flex-direction: column;
  width: 450rpx;
  margin-left: 28rpx;
}

.illList-info-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.illList-title {
  font-weight: bold;
  color: #489775;
  font-size: 28rpx;
}

.illList-info {
  font-size: 20rpx;
  color: #333;
}

.circle {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #7e7e7e;
  border-radius: 50%;
  margin-left: 90rpx;
  margin-right: 30rpx;
}

.circleSelected {
  width: 16rpx;
  height: 16rpx;
  border: 10rpx solid #489775;
  border-radius: 50%;
  margin-left: 90rpx;
  margin-right: 30rpx;
}

.people-name {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  margin-left: 24rpx;
}

.people-num {
  font-size: 24rpx;
  color: #333;
  margin-left: 32rpx;
}

.btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #489775;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  z-index: 999;
}

.btn:active {
  opacity: 0.7;
}

.hospitalText {
  margin-left: 88rpx;
  line-height: 100rpx;
  font-size: 25rpx;
  color: #333;
}
