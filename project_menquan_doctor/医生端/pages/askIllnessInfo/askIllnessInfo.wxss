/* pages/askIllnessInfo/askIllnessInfo.wxss */
page{
  background-color: #F8F8F8;

}
.scrollV{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}
.scrollContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}
.userInfo{
  display: flex;
  flex-direction: column;
  width: 654rpx;
  padding-left: 34rpx;
  margin-bottom: 28rpx;
  margin-top: 50rpx;
}
.userInfo-name{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.userInfo view{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}
.userInfo-sex{
  font-size: 24rpx;
  color: #333333;
}
.infoItem{
  width: 654rpx;
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  padding: 9rpx 0 20rpx 34rpx;
  margin-bottom: 10rpx;
}
.infoItem-star{
  font-size: 24rpx;
  color: #D56868;
  font-weight: bold;
}
.infoItem-title{
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  
}
.infoItem-content{
  font-size: 24rpx;
  color: #777777;
  margin-right: 28rpx;
  }
.infoItem view{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 14rpx;
  margin-bottom: 18rpx;
}
.sessionTitle{
  width: 654rpx;
  height: 84rpx;
  padding-left: 34rpx;
  line-height: 84rpx;
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  display: flex;
  flex-direction: row;
}
.imgItem{
  width: 654rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-radius: 10rpx;
  padding: 9rpx 0 0 34rpx;
}
.imgItem image{
  width: 160rpx;
  height: 144rpx;
  margin-right: 22rpx;
  margin-bottom: 20rpx;
}




.message{
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #489775;
  }
  .message image{
    width: 50rpx;
    height: 50rpx;
  }
  .message text{
    font-size: 30rpx;
    color: #FFFFFF;
    margin-left: 18rpx;
  }
  .message:active{
    opacity: 0.5;
  }
  