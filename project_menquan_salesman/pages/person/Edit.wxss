@import "/pages/component/modal.wxss";

.container{
  background: #F3F3F3;
  height: 100%;
}

.head_t{
  text-align: center;
  width: 100%;
  height: 208rpx;
}

.head_t .get_score{
  padding: 32rpx 0 10rpx;
  position: relative;
}

.head_t .get_score .score{
  width:156rpx;
  height:156rpx;
  border-radius: 50%;
  background: #fff;
  margin:0 auto;
}

.head_t .get_score .score image{
  width:156rpx;
  height:156rpx;
  border-radius: 50%;
  margin:0 auto;
}

.attrInfo{
  width: 100%;
  margin-bottom:180rpx;
  background: #fff;
}

.attrInfo .infoItem{
  height: 170rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
  border-bottom: 2rpx solid #E1E1E1;
}

.attrInfo .infoItem .infoTitle{
  font-size: 12px;
  color: #6F6F6F;
  padding-top: 44rpx;
}

.attrInfo .infoItem .infoCont{
  font-size: 15px;
  padding-top:27rpx;
  color: #3F3F3F;
}

.bottomOperate{
  position:fixed;
  bottom:0;
  right:0;
  left:0;
  border-radius:0;
  z-index: 999;
}

.bottomOperate .bottomFont{
  text-align: center;
  height:88rpx;
  line-height:88rpx;
  background-color:#489775;
  color:#fff;
  font-size:15px;
  z-index: 999;
}

.weui-check__hd_in-checkbox{
  float:left;
}

.weui-radiobox {
  margin-right:96rpx;
  display:flex;
}

.weui-check__label {
  margin-right:96rpx;
  background:#fff;
}

.weui-cell__text {
  padding-left:56rpx;
}
