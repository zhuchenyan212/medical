@import "/pages/component/modal.wxss";

page {
  background: #fff;
}

.container {
  position: relative;
  width: 100%;
  background-color: #fff;
  color: #939393;
}

.nav_left {
  display: inline-block;
  width: 25%;
  background: #fff;
  text-align: center;
}

.nav_left .nav_left_items {
  height: 40px;
  line-height: 40px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
  overflow: hidden;
  position: relative;
}

.active {
  background: #f5f5f5;
  height: 40px;
  line-height: 40px;
  padding: 5px 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
  overflow: hidden;
  position: relative;
}

.nav_right {
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 1000px;
  padding: 10px;
  box-sizing: border-box;
  background: #fff;
  border-left: 2px solid #f5f5f5;
}

.nav_right .nav_right_items {
  float: left;
  height: 28px;
  text-align: center;
  border: 1px solid #b7b7b7;
  border-radius: 6px;
  line-height: 28px;
  margin: 7px;
  padding-left: 5px;
  padding-right: 5px;
}

.nav_right .nav_right_items text {
  display: block;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nav_right_active {
  float: left;
  height: 28px;
  text-align: center;
  border: 1px solid #b7b7b7;
  border-radius: 6px;
  line-height: 28px;
  margin: 7px;
  padding-left: 5px;
  padding-right: 5px;
  background: #489775;
  color: #fff;
}

.nav_right_active text {
  display: block;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.showP {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 0px;
  top: 0px;
}

.nodata_text {
  color: black;
  font-size: 14px;
  text-align: center;
}

.bottomOperate {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  border-radius: 0;
  z-index: 999;
}

.bottomOperate .bottomFont {
  text-align: center;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 15px;
  z-index: 999;
  width: 100%;
  border-top: 1px solid #ccc;
}
