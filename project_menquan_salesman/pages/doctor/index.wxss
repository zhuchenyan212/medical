@import "/pages/component/modal.wxss";

.container {
  background: #f3f3f3;
  height: 100%;
}

.head_t {
  width: 100%;
  height: 188rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.head_t .get_score {
  padding: 24rpx 0rpx 0rpx 42rpx;
  position: relative;
  float: left;
}

.head_t .get_score .score {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #f3f3f3;
}

.head_t .get_score .score image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.head_t .clickupload {
  float: left;
  width: 66%;
  line-height: 188rpx;
  padding-left: 15rpx;
  font-size: 15px;
  color: #4d4d4d;
}

.attrInfo {
  width: 100%;
  font-size: 26rpx;
  background: #fff;
  height: 100%;
}

.attrInfo .infoItem {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 44rpx;
  padding-right: 44rpx;
  border-bottom: 2rpx solid #e1e1e1;
}

.infoItemGood {
  height: 60%;
  line-height: 100rpx;
  padding-left: 44rpx;
  padding-right: 44rpx;
  border-bottom: 2rpx solid #e1e1e1;
  margin-bottom: 50px;
}

.attrInfo .infoItem .infoCont {
  font-size: 15px;
  color: #3f3f3f;
  margin-left: 88rpx;
  float: left;
}

.m24 {
  margin-top: 24rpx;
  margin-left: 88rpx;
}

.bottomOperate {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  border-radius: 0;
  z-index: 999;
}

.bottomOperate .bottomFont {
  text-align: center;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #489775;
  color: #fff;
  font-size: 15px;
  z-index: 999;
}

.weui-check__hd_in-checkbox {
  float: left;
}

.weui-radiobox {
  display: flex;
}

.weui-check__label {
  height: 99rpx;
  margin-right: 96rpx;
  background: #fff;
}

.weui-cell__text {
  padding-left: 56rpx;
}

.nav {
  width: 32rpx;
  height: 32rpx;
}
