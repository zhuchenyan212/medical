@import "/pages/component/modal.wxss";

.container {
  background: #f3f3f3;
  height: 100%;
}

.head_t {
  background: #489775;
  text-align: center;
  width: 100%;
  height: 350rpx;
  color: #fff;
}

.head_t .get_score {
  padding: 32rpx 0 20rpx;
  position: relative;
}

.head_t .get_score .score {
  width: 134rpx;
  height: 134rpx;
  border-radius: 50%;
}

.head_t .total_score {
  font-size: 32rpx;
  line-height: 60rpx;
}

.head_t .total_score .docName {
  font-size: 16px;
}

.head_t .total_score .lable_doc {
  width: 100%;
  height: 32rpx;
  font-size: 10px;
  border-radius: 8px;
  color: #fff;
  padding-left: 5px;
  padding-right: 5px;
  border: 1px solid #fff;
  margin-left: 10px;
}

.head_t .total_score .docAd {
  font-size: 11px;
  padding-right: 30rpx;
}

.doctorIntroduce {
  margin-top: 20rpx;
  width: 100%;
  height: 220rpx;
  background: #fff;
}

.doctorInfo {
  margin-top: 20rpx;
  width: 100%;
  height: 450rpx;
  background: #fff;
}

.doctorillness {
  margin-top: 20rpx;
  width: 100%;
  height: 390rpx;
  background: #fff;
}

.IntroduceTitle {
  width: 100%;
  height: 40rpx;
  color: #636363;
  font-size: 14px;
  padding-top: 15rpx;
  padding-left: 56rpx;
  margin-bottom: 10rpx;
}

.IntroduceTitle .right {
  font-size: 11px !important;
  color: #a9a9a9;
  padding-right: 113rpx;
}

.doctorIntroduce .leftTop {
  width: 30rpx;
  height: 30rpx;
  margin-left: 68rpx;
}

.doctorIntroduce .leftTop image {
  width: 100%;
  height: 100%;
}

.doctorIntroduce .rightbottom {
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin-right: 68rpx;
}

.doctorIntroduce .rightbottom image {
  width: 100%;
  height: 100%;
}

.doctorIntroduce .IntroduceContent {
  height: 70rpx;
  font-size: 11px;
  color: #a9a9a9;
  margin-left: 86rpx;
  margin-right: 86rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.doctorInfo .Introducecont {
  margin-top: 20rpx;
}

.doctorInfo .doctorInfoitem {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 12px;
  padding-left: 54rpx;
  color: #a9a9a9;
}

.doctorInfo .doctorInfoitem .spaceline {
  padding-left: 23rpx;
}

.speor {
  color: #489775;
}

.doc_type {
  width: 100%;
  height: 32rpx;
  font-size: 10px;
  border-radius: 8px;
  color: #489775;
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  border: 1px solid #489775;
  margin-left: 10px;
}

.doctorillness .item-img {
  padding-left: 43rpx;
  background-color: 190rpx;
  padding-right: 43rpx;
}

.doctorillness .item-img .ul {
  display: flex;
}

.doctorillness .item-img .ul .pro-img {
  width: 220rpx;
  height: 220rpx;
  margin: 30rpx 15rpx;
  display: inline-block;
  box-sizing: border-box;
  border: 1px solid #ebebeb;
}

.doctorillness .item-img .ul .pro-img image {
  width: 100%;
  height: 80%;
  display: block;
}

.doctorillness .item-img .ul .pro-img .illName {
  font-size: 11px;
  color: #b4b4b4;
  padding-top: 4px;
  padding-left: 8rpx;
  padding-right: 8rpx;
}
