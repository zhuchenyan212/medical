@import "/pages/component/modal.wxss";

.searchHead {
  width: 100%;
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
}

/* 搜索样式 */

.contA {
  height: 120rpx;
  flex-direction: row;
  padding: 12rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.searchcontainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 38rpx;
  height: 76rpx;
  flex-grow: 1;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
}

.letf_search {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.input_delete {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.search_input {
  font-size: 24rpx;
  color: #333;
  flex-grow: 1;
}

.search_placeholder {
  font-size: 24rpx;
  color: #999;
}

.search_btn {
  line-height: 35px;
  font-size: 28rpx;
  flex-shrink: 0;
  padding: 0rpx;
  text-align: center;
  color: #1a173b;
  font-weight: bold;
  background: none !important;
}

.Doctoritem {
  display: flex;
  box-sizing: border-box;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.Doctoritem .pro-img image {
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  box-sizing: border-box;
}

.pro-info-box {
  position: relative;
  padding-left: 40rpx;
  padding-top: 20rpx;
  line-height: 21px;
  -webkit-box-flex: 1;
  flex: 1;
}

.pro-info-box .ft-16 {
  font-size: 16px;
  font-weight: bold;
}

.pro-info-box .lable_Doc {
  width: 100%;
  height: 32rpx;
  font-size: 10px;
  border-radius: 8px;
  color: #489775;
  padding-left: 5px;
  padding-right: 5px;
  border: 1px solid #489775;
  margin-left: 10px;
}

.pro-info-box .ft-12 {
  font-size: 12px;
  color: #989898;
}

.lable_hos {
  font-size: 10px;
  color: #489775;
  padding-left: 20px;
}

.yaoqinma {
  width: 56%;
  height: 40rpx;
  background: rgba(237, 237, 240, 1);
  border: 1px solid rgba(181, 182, 191, 1);
  float: left;
}

.copy {
  float: right;
  width: 36%;
  font-size: 22rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: #489775;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 6rpx;
}
