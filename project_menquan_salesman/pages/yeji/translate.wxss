page {
  padding-top: 56rpx;
}

.deliveryItem {
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.dateTime {
  display: flex;
  flex-direction: column;
}

.dateTimeText {
  font-size: 24rpx;
  color: #524f4e;
}

.dateTimeText2 {
